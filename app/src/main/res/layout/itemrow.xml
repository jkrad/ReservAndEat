<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivRes"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_width="60dp"

        android:layout_height="60sp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/itemmargin" />

    <TextView
        android:id="@+id/tvResNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivRes"
        android:layout_toEndOf="@id/ivRes"
        android:layout_toRightOf="@+id/ivRes"
        android:text="TextView"
        android:textSize="25dp"


        />

    <TextView
        android:id="@+id/tvTipoComida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivRes"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/ivRes"
        android:layout_toRightOf="@+id/ivRes"
        android:text="TextView1"

        android:textSize="25dp" />
</RelativeLayout>